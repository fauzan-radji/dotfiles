{
  // terminal
  "terminal.integrated.fontFamily": "'Roboto Mono', 'Cascadia Code', 'Droid Sans Mono', monospace",
  "terminal.integrated.fontSize": 16,
  "terminal.integrated.lineHeight": 1.4,
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.cursorBlinking": true,

  // editor
  "editor.fontFamily": "'Cascadia Code', 'Droid Sans Mono', monospace",
  "workbench.colorTheme": "Shades of Purple (Super Dark)",
  "editor.fontSize": 16,
  "editor.lineHeight": 1.6,
  "editor.tabSize": 2,
  "editor.detectIndentation": false,
  "editor.fontLigatures": true,
  "editor.guides.bracketPairs": "active",
  "editor.guides.bracketPairsHorizontal": "active",
  "editor.stickyScroll.enabled": true,

  // minimap
  "editor.minimap.renderCharacters": false,
  "editor.minimap.autohide": true,
  "editor.minimap.scale": 2,
  "editor.minimap.maxColumn": 80,

  // formatter
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "[java]": { "editor.defaultFormatter": "mwpb.java-prettier-formatter" },
  "[php]": { "editor.defaultFormatter": "bmewburn.vscode-intelephense-client" },
  "[blade]": {
    "editor.defaultFormatter": "shufo.vscode-blade-formatter"
    // "editor.defaultFormatter": "amirmarmul.laravel-blade-vscode"
  },
  "[python]": {
    "editor.formatOnType": true
  },
  "bladeFormatter.format.indentSize": 2,
  "bladeFormatter.format.sortHtmlAttributes": "code-guide",
  "bladeFormatter.format.wrapAttributes": "aligned-multiple",
  "bladeFormatter.format.wrapLineLength": 1000,
  "bladeFormatter.format.sortTailwindcssClasses": true,
  "editor.formatOnSave": true,

  "emmet.includeLanguages": {
    "blade": "html",
    "javascript": "html"
  },

  // disable startup page on startup
  "workbench.startupEditor": "none",

  // icons
  "workbench.iconTheme": "vscode-icons",

  // code runner
  "code-runner.runInTerminal": true,
  "code-runner.executorMap": {
    "cpp": "clear; g++ src/$fileName -o bin/$fileNameWithoutExt; bin/$fileNameWithoutExt"
  },

  "liveServer.settings.NoBrowser": true,
  "files.associations": {
    ".htaccess": "plaintext",
    "*.css": "tailwindcss"
  },

  "editor.quickSuggestions": {
    "other": "on",
    "comments": "off",
    "strings": true
  },
  "git.autofetch": true,

  "git.confirmSync": false,
  "editor.inlineSuggest.enabled": true,
  "github.copilot.enable": {
    "*": true,
    "plaintext": false,
    "markdown": true,
    "scminput": false
  }
}
